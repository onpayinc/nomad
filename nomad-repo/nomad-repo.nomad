job "nomad-repository" {
  datacenters = ["us-east-1"]
  type = "system"
  constraint {
    attribute = "${node.unique.id}"
    value = "fecd805d-4a0d-ec76-7719-0bfea9114f8e"
  }

  restart {
    attempts = 0
    mode = "fail"
  }

  group "all-servers" {
    task "cloneGitRepo" {
      driver = "raw_exec"

      config {
        command = "/bin/sleep"       # When running a binary that exists on the host, the path must be absolute.
        args    = ["10"]
      }

      artifact {
        source = "git@github.com:onpayinc/nomad.git"
        destination = "/nomad-repo"
        options {
          sshkey = ""
        }
      }
    }
  }
}
